{
    "compilerOptions": {
        "outDir": "build",
        "target": "es6",
        "module": "system",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true
    },
    "include": [
        "./src/**/*"
    ]
}