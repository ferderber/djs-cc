{
  "name": "djs-cc",
  "version": "0.4.3",
  "description": "A Discord.js 'extension' that allows for easy creation of commands.",
  "main": "build/index.js",
  "typings": "build/index",
  "scripts": {
    "start": "npm run build && node index.js",
    "start:dev": "nodemon -e ts -w ./src -x npm run start",
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "tslint -c tslint.json --project .",
    "docs": "typedoc --out ./docs --exclude index",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "cacheDirectory": "./node_modules/.cache/jest",
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "mapCoverage": true,
    "testRegex": "(/tests/.*(\\.|/)(test|spec))\\.jsx?$",
    "coveragePathIgnorePatterns": [
      "<rootDir>/tests",
      "<rootDir>/src/commands",
      "<rootDir>/node_modules"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "tsx",
      "json"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/matthewferderber/djs-cc.git"
  },
  "keywords": [
    "Bot",
    "Discord"
  ],
  "author": "Matthew Ferderber",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/matthewferderber/djs-cc/issues"
  },
  "homepage": "https://github.com/matthewferderber/djs-cc#readme",
  "dependencies": {
    "discord.js": "^11.4.2",
    "reflect-metadata": "^0.1.12",
    "typeorm": "^0.2.7"
  },
  "optionalDependencies": {
    "mysql": "^2.13.0",
    "sqlite3": "^4.0.2"
  },
  "devDependencies": {
    "@types/jest": "^21.1.5",
    "@types/node": "^8.0.47",
    "eslint": "^4.9.0",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "ts-jest": "^21.1.3",
    "tslint": "^5.8.0",
    "typedoc": "^0.10.0",
    "typescript": "^2.7.2"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "node": true
    }
  }
}
